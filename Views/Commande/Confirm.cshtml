@model Project2_Brydel.Models.Commande
@{
    ViewData["Title"] = "Commande Confirmée";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header text-center bg-dark text-white py-3">
                    <h2 class="m-0">🎉 Commande Confirmée 🎉</h2>
                </div>
                
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="success-checkmark">
                            <div class="check-icon">
                                <span class="icon-line line-tip"></span>
                                <span class="icon-line line-long"></span>
                            </div>
                        </div>
                        <p class="lead">Merci pour votre commande, <strong>@Model.PrenomClient</strong> !</p>
                    </div>
                    
                    <div class="row">
                    
                        <div class="col-md-5 mb-4">
                            <div class="product-img-container text-center">
                                <img src="@Model.Produit.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Produit.Nom" style="max-height: 200px; object-fit: contain;" />
                                <h5 class="mt-3">@Model.Produit.Nom</h5>
                                <p class="text-muted">@Model.Produit.Prix $ × @Model.Quantite</p>
                            </div>
                        </div>
                        
                        <!-- RECU -->
                        <div class="col-md-7">
                            <div class="receipt-container p-3 bg-light rounded">
                                <div class="receipt-header border-bottom pb-2 mb-3">
                                    <h4 class="receipt-title">Détails de la commande</h4>
                                    <div class="receipt-number">
                                        <small class="text-muted">Commande #@Model.CommandeId</small>
                                    </div>
                                    <div class="receipt-date">
                                        <small class="text-muted">@Model.DateCommande.ToString("dd MMMM yyyy - HH:mm")</small>
                                    </div>
                                </div>
                                
                                <div class="client-info mb-3">
                                    <div><strong>Client:</strong> @Model.PrenomClient @Model.NomClient</div>
                                    <div><strong>Adresse:</strong> @Model.AdresseClient</div>
                                    <div><strong>Téléphone:</strong> @Model.TelephoneClient</div>
                                </div>
                                
                                <div class="receipt-items border-top border-bottom py-3 my-3">
                                    <div class="d-flex justify-content-between">
                                        <span>@Model.Produit.Nom × @Model.Quantite</span>
                                        <span>@(Model.Produit.Prix * Model.Quantite) $</span>
                                    </div>
                                </div>
                                
                                <div class="receipt-total d-flex justify-content-between mt-3">
                                    <span class="fw-bold">Total</span>
                                    <span class="fw-bold fs-5">@(Model.Quantite * Model.Produit.Prix) $</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="delivery-info mt-4 p-3 bg-light rounded">
                        <h5><i class="bi bi-truck"></i> Livraison</h5>
                        <p class="mb-0">Votre commande sera préparée et expédiée dans les plus brefs délais. Vous recevrez un sms de confirmation avec les détails de livraison.</p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-dark btn-lg px-4 me-2">
                            <i class="bi bi-house-door"></i> Retour à l'accueil
                        </a>
                        <a href="#" class="btn btn-outline-dark btn-lg px-4" onclick="window.print(); return false;">
                            <i class="bi bi-printer"></i> Imprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/confirm.js"></script>
</div>



